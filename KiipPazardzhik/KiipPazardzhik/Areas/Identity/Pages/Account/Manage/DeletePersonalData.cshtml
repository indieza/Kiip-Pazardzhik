@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Изтрий лична информация";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>
<hr />
<div class="alert alert-warning" role="alert">
    <p>
        <strong>Изтривайки тази информация, вашият профил няма да може да бъде възстановен от нашата система.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger" type="submit">Изтрий моя акаунт</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
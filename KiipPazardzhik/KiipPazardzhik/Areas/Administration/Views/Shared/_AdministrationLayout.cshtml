<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="icon" type="image/png" href="~/fav_icon.ico">
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>
        @ViewData["Title"] - КИИП Пазарджик
    </title>
    <link href="~/administration/css/adminPanelStyles.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" crossorigin="anonymous" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js" crossorigin="anonymous"></script>
</head>

<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand" asp-area="Administration" asp-controller="Dashboard" asp-action="Index">
            <i class="fas fa-user-shield"></i> Панел
        </a>
        <button class="btn btn-link btn-sm order-1 order-lg-0" id="sidebarToggle" href="#"><i class="fas fa-bars"></i></button>
        <!-- Navbar Search-->
        <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
            <div class="input-group">
                <input class="form-control" type="text" placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2" />
                <div class="input-group-append">
                    <button class="btn btn-primary" type="button"><i class="fas fa-search"></i></button>
                </div>
            </div>
        </form>
        <!-- Navbar-->
        <ul class="navbar-nav ml-auto ml-md-0">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="userDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Настройки</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout">Изход</a>
                </div>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Ядро</div>
                        <a class="nav-link" asp-area="Administration" asp-controller="Dashboard" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Панел
                        </a>
                        <div class="sb-sidenav-menu-heading">Общи действия</div>
                        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#people" aria-expanded="false" aria-controls="collapseLayouts">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Хора
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="people" aria-labelledby="headingOne" data-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-area="Administration" asp-controller="AddPerson" asp-action="Index">
                                    Добави човек
                                </a>
                                <a class="nav-link" asp-area="Administration" asp-controller="AddPeople" asp-action="Index">
                                    Добави хора
                                </a>
                                <a class="nav-link" asp-area="Administration" asp-controller="EditPerson" asp-action="Index">
                                    Промени човек
                                </a>
                                <a class="nav-link" asp-area="Administration" asp-controller="DeletePerson" asp-action="Index">
                                    Изтрий човек
                                </a>
                            </nav>
                        </div>
                        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#news" aria-expanded="false" aria-controls="collapseLayouts">
                            <div class="sb-nav-link-icon"><i class="far fa-newspaper"></i></div>
                            Новини
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="news" aria-labelledby="headingOne" data-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-area="Administration" asp-controller="AddNews" asp-action="Index">
                                    Добави новина
                                </a>
                                <a class="nav-link" asp-area="Administration" asp-controller="EditNews" asp-action="Index">
                                    Промени новина
                                </a>
                                <a class="nav-link" asp-area="Administration" asp-controller="DeleteNews" asp-action="Index">
                                    Изтрий новина
                                </a>
                            </nav>
                        </div>
                        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#documents" aria-expanded="false" aria-controls="collapseLayouts">
                            <div class="sb-nav-link-icon"><i class="fas fa-file-upload"></i></div>
                            Документи
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="documents" aria-labelledby="headingOne" data-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-area="Administration" asp-controller="AddDocument" asp-action="Index">
                                    Добави документ
                                </a>
                                <a class="nav-link" asp-area="Administration" asp-controller="DeleteDocument" asp-action="Index">
                                    Изтрий документ
                                </a>
                            </nav>
                        </div>
                        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#others" aria-expanded="false" aria-controls="collapseLayouts">
                            <div class="sb-nav-link-icon"><i class="fas fa-ellipsis-h"></i></div>
                            Други
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="others" aria-labelledby="headingOne" data-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-area="Administration" asp-controller="AddRegionalCollege" asp-action="Index">
                                    Добави регионална колегия
                                </a>
                                <a class="nav-link" asp-area="Administration" asp-controller="DeleteRegionalCollege" asp-action="Index">
                                    Изтрий регионална колегия
                                </a>
                            </nav>
                        </div>
                        <div class="sb-sidenav-menu-heading">Уебсайт навигация</div>
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
                            Начало
                        </a>
                        <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                            Профил
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Влезнал като:</div>
                    <a asp-area="Identity" asp-page="/Account/Manage/Index">
                        @this.User.Identity.Name
                    </a>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Sharemundo Bulgaria 2020</div>
                        <div>
                            Design and Development
                            &middot;
                            <a href="https://github.com/indieza" target="_blank">Simeon Vale(indieza)</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/administration/js/adminPanelScripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="~/administration/assets/chart-area-demo.js"></script>
    <script src="~/administration/assets/chart-bar-demo.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
    <script src="~/administration/assets/datatables-demo.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
@{
    ViewData["Title"] = "Изтрий човек";
}

@model DeletePersonBaseModel

<h1 class="mt-4">Изтрий човек</h1>
<hr />
<partial name="_TempDataPartial" />

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="form-group col-lg-12">
            <label asp-for="@this.Model.DeletePersonInputModel.Id"></label>
            <select class="form-control" asp-for="@this.Model.DeletePersonInputModel.Id">
                <option value="" disabled selected>Избери...</option>
                @foreach (var person in this.Model.AllPeople)
                {
                    <option value="@person.Id">@person.DisplayField</option>
                }
            </select>
            <span asp-validation-for="@this.Model.DeletePersonInputModel.Id" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-12">
            <button class="btn btn-success" asp-area="Administration" asp-controller="DeletePerson" asp-action="DeletePerson">
                Изтрий
            </button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
    <script src="~/lib/tinymce/visualizer.js" type="text/javascript"></script>
}
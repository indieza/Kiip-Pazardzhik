@{
    ViewData["Title"] = "Добави регионална колегия";
}

@model AddRegionalCollegeInputModel

<h1 class="mt-4">@ViewData["Title"]</h1>
<hr />
<partial name="_TempDataPartial" />

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="form-group col-lg-12">
            <label asp-for="@this.Model.Name"></label>
            <input class="form-control" type="text" asp-for="@this.Model.Name" autocomplete="off" />
            <span asp-validation-for="@this.Model.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-12">
            <label asp-for="@this.Model.Url"></label>
            <input class="form-control" type="text" asp-for="@this.Model.Url" autocomplete="off" />
            <span asp-validation-for="@this.Model.Url" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-12">
            <button class="btn btn-success" asp-area="Administration" asp-controller="AddRegionalCollege" asp-action="AddRegionalCollege">
                Създай
            </button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
    <script src="~/lib/tinymce/visualizer.js" type="text/javascript"></script>
}
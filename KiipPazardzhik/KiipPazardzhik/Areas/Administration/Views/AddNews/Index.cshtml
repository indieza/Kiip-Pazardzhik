@{
    ViewData["Title"] = "Добави новина";
}

@model AddNewsInputModel

<h2 class="mt-4 row">
    <b>
        @ViewData["Title"]
    </b>
</h2>
<hr class="row" />
<div class="mt-4">
    <partial name="_TempDataPartial" />
</div>

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-12 form-group">
            <label asp-for="@this.Model.Title"></label>
            <input type="text" class="form-control" asp-for="@this.Model.Title" />
            <span class="text-danger" asp-validation-for="@this.Model.Title"></span>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12 form-group">
            <label asp-for="@this.Model.Description"></label>
            <textarea asp-for="@Model.Description" class="form-control edit-with-tinymce" style="resize: vertical" rows="30"></textarea>
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12 form-group">
            <label asp-for="@this.Model.WebsiteFiles"></label>
            <input type="file" class="form-control-file" asp-for="@this.Model.WebsiteFiles" multiple />
            <span class="text-danger" asp-validation-for="@this.Model.WebsiteFiles"></span>
        </div>
    </div>
    <br />
    <div class="row">
        <button class="btn btn-success" asp-area="Administration" asp-controller="AddNews" asp-action="AddNews">
            <i class="fas fa-check"></i> Създай
        </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
    <script src="~/lib/tinymce/visualizer.js" type="text/javascript"></script>
}
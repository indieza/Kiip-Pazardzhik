@{
    ViewData["Title"] = "Добави човек";
}

@model AddPersonInputModel

<h1 class="mt-4">Добави човек</h1>
<hr />
<partial name="_TempDataPartial" />

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="form-group col-lg-12">
            <label asp-for="@this.Model.RegisterNumber"></label>
            <input class="form-control" type="text" asp-for="@this.Model.RegisterNumber" autocomplete="off" />
            <span asp-validation-for="@this.Model.RegisterNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-4">
            <label asp-for="@this.Model.FirstName"></label>
            <input class="form-control" type="text" asp-for="@this.Model.FirstName" autocomplete="off" />
            <span asp-validation-for="@this.Model.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-4">
            <label asp-for="@this.Model.MiddleName"></label>
            <input class="form-control" type="text" asp-for="@this.Model.MiddleName" autocomplete="off" />
            <span asp-validation-for="@this.Model.MiddleName" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-4">
            <label asp-for="@this.Model.LastName"></label>
            <input class="form-control" type="text" asp-for="@this.Model.LastName" autocomplete="off" />
            <span asp-validation-for="@this.Model.LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-6">
            <label asp-for="@this.Model.Section"></label>
            <input class="form-control" type="text" asp-for="@this.Model.Section" autocomplete="off" />
            <span asp-validation-for="@Model.Section" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-6">
            <label asp-for="@this.Model.LegalCapacity"></label>
            <input class="form-control" type="text" asp-for="@this.Model.LegalCapacity" autocomplete="off" />
            <span asp-validation-for="@Model.LegalCapacity" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-6">
            <label asp-for="@this.Model.Phone"></label>
            <input class="form-control" type="text" asp-for="@this.Model.Phone" autocomplete="off" />
            <span asp-validation-for="@Model.Phone" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-6">
            <label asp-for="@this.Model.Email"></label>
            <input class="form-control" type="text" asp-for="@this.Model.Email" autocomplete="off" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-6">
            <label asp-for="@this.Model.IsActive"></label>
            <select class="form-control" asp-for="@this.Model.IsActive">
                <option value="" disabled selected>Избери...</option>
                <option value="@true">Да</option>
                <option value="@false">Не</option>
            </select>
            <span asp-validation-for="@this.Model.IsActive" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-6">
            <label asp-for="@this.Model.IsFrozen"></label>
            <select class="form-control" asp-for="@this.Model.IsFrozen">
                <option value="" disabled selected>Избери...</option>
                <option value="@true">Да</option>
                <option value="@false">Не</option>
            </select>
            <span asp-validation-for="@this.Model.IsFrozen" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-12">
            <button class="btn btn-success" asp-area="Administration" asp-controller="AddPerson" asp-action="AddPerson">
                Създай
            </button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
    <script src="~/lib/tinymce/visualizer.js" type="text/javascript"></script>
}
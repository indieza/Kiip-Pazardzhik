@{
    ViewData["Title"] = "Информация";
}

@model InformationViewModel

<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Информация</h1>
            </div>
        </div>
    </div>
</div>

<div class="services">
    <div class="container">
        <div>
            @Html.Raw(this.Model.Description)
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            document.querySelectorAll('.nav-item')[2].classList.add("active");
            document.querySelectorAll('.nav-item.active')[0].classList.remove("active");
        });
    </script>
}
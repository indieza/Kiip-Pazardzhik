@{
    ViewData["Title"] = "Контакти";
}

@model ContactsInputModel

<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>@ViewData["Title"]</h1>
            </div>
        </div>
    </div>
</div>
<div class="mt-4">
    <div class="container">
        <partial name="_TempDataPartial" />
    </div>
</div>

<div class="callback-form contact-us">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Изпратете ни <em>запитване</em></h2>
                </div>
            </div>
            <div class="col-md-12">
                <div class="contact-form">
                    <form id="contact" action="" method="post">
                        <div class="row">
                            <div class="col-lg-4 col-md-12 col-sm-12">
                                <fieldset>
                                    <label asp-for="@this.Model.FullName"></label>
                                    <input asp-for="FullName" type="text" class="form-control" id="name" placeholder="Име">
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-lg-4 col-md-12 col-sm-12">
                                <fieldset>
                                    <label asp-for="@this.Model.Email"></label>
                                    <input asp-for="Email" type="text" class="form-control" id="email" placeholder="Мейл">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-lg-4 col-md-12 col-sm-12">
                                <fieldset>
                                    <label asp-for="@this.Model.Title"></label>
                                    <input asp-for="Title" type="text" class="form-control" id="subject" placeholder="Заглавие">
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <label asp-for="@this.Model.Description"></label>
                                    <textarea asp-for="Description" rows="6" class="form-control" id="message" placeholder="Съдържание"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <button type="submit" id="form-submit" class="filled-button">Изпрати</button>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
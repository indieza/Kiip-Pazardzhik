@{
    ViewData["Title"] = "Регистър";
}

@model RegisterBaseModel

<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>@ViewData["Title"]</h1>
            </div>
        </div>
    </div>
</div>

<br />
<div class="container">
    @for (int i = 0; i < this.Model.AllSections.Count(); i += 6)
    {
        <div class="row">
            @{
                int j = 0;
                for (; j <= 5 && i + j < this.Model.AllSections.Count(); j++)
                {
                    <div class="col-md-2">
                        <form method="get">
                            <button asp-area=""
                                    asp-controller="Register"
                                    asp-action="GetSectionByName"
                                    asp-route-sectionName="@this.Model.AllSections.ElementAt(i + j).Name" style="width: 100%" class="btn btn-info">
                                @this.Model.AllSections.ElementAt(i + j).Name
                            </button>
                        </form>
                    </div>
                }
            }
        </div>
        <br />
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            document.querySelectorAll('.nav-item')[3].classList.add("active");
            document.querySelectorAll('.nav-item.active')[0].classList.remove("active");
        });
    </script>
}